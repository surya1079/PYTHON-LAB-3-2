class Solution:
    def addDigits(self, num: int) -> int:
        if num==0:
            return 0
        else:
            #keep reducimg until we get a single digit
            while num>=10:
                #sum all digits
                digit_sum=0
                for digit in str(num):
                    digit_sum+=int(digit)
                num=digit_sum
            return num
sol=Solution()
print(sol.addDigits(256))                    
        
